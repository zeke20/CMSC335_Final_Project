<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>NBA Player Result</title>
  <link rel="stylesheet" href="/styles.css"/>
</head>
<body>
  <div class="container">
    <h1>Results for <%= playerName %> (Jersey: <%= jerseyNumber %>)</h1>
    <h2>Player Information</h2>
    <div class="results">
      <% if (apiData && apiData.data && apiData.data.length > 0) { %>
        <p>Players Found:</p>
        <ul>
          <% apiData.data.forEach(player => { %>
            <li>
              <strong><%= player.first_name %> <%= player.last_name %></strong><br>
              Position: <%= player.position || "N/A" %><br>
              Team: <%= player.team.full_name %><br>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No players found for the given name.</p>
      <% } %>
      <pre><%= JSON.stringify(apiData, null, 2) %></pre>
    </div>
    <a href="/">Go Back</a>
  </div>
</body>
</html>
